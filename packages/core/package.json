{
  "name": "@bearer/core",
  "version": "0.0.1",
  "description": "Bearer Core",
  "main": "dist/main.js",
  "module": "dist/main.es.js",
  "author": "Bearer",
  "license": "UNLICENSED",
  "types": "dist/index.d.ts",
  "files": [
    "src/*.js",
    "dist/*.js"
  ],
  "scripts": {
    "start": "yarn build",
    "build": "per-env",
    "build:development": "BUILD=development rollup -c -w",
    "build:production": "NODE_ENV=production rollup -c",
    "prepublish": "yarn build:production",
    "prepublishOnly": "BUILD=distribution yarn prepublish",
    "test": "jest"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "<rootDir>/preprocessor.js"
    },
    "testMatch": [
      "**/__tests__/*.+(ts|tsx|js)"
    ],
    "setupFiles": [
      "./jest.setup.js"
    ]
  },
  "repository": {
    "type": "git",
    "url": "github:BearerSH/bearer"
  },
  "devDependencies": {
    "@types/fbemitter": "^2.0.32",
    "@types/jest": "^22.2.3",
    "babel-core": "^6.26.3",
    "babel-loader": "^7.1.4",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-plugin-transform-inline-environment-variables": "^0.4.3",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "dotenv": "^5.0.1",
    "eslint": "^4.19.1",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.12.0",
    "jest": "^22.4.4",
    "jest-fetch-mock": "^1.6.1",
    "per-env": "^1.0.2",
    "rollup": "^0.59.2",
    "rollup-plugin-babel": "^3.0.4",
    "rollup-plugin-commonjs": "^9.1.3",
    "rollup-plugin-copy": "^0.2.3",
    "rollup-plugin-html-entry": "^0.2.0",
    "rollup-plugin-livereload": "^0.6.0",
    "rollup-plugin-node-resolve": "^3.3.0",
    "rollup-plugin-serve": "^0.4.2",
    "rollup-plugin-typescript2": "^0.14.0",
    "rollup-plugin-uglify": "^3.0.0",
    "rollup-watch": "^4.3.1",
    "ts-jest": "^22.4.6"
  },
  "dependencies": {
    "babel-plugin-inline-dotenv": "^1.1.2",
    "fbemitter": "^2.1.1",
    "rc": "^1.2.8",
    "rollup-plugin-env": "^0.21.4",
    "rollup-plugin-replace": "^2.0.0",
    "typescript": "^2.8.3"
  }
}
