{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "experimentalDecorators": true,
    "module": "es2015",
    "target": "es2015",
    "moduleResolution": "node",
    "outDir": "build/compiled",
    "declaration": true,
    "esModuleInterop": true
  },
  "include": ["src/"],
  "exclude": ["node_modules/", "build/"]
}
