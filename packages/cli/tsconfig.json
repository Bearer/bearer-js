{
  "compilerOptions": {
    "declaration": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "importHelpers": true,
    "module": "commonjs",
    "outDir": "./lib",
    "rootDirs": ["./src"],
    "strict": true,
    "target": "es2017",
    "strictNullChecks": true
  },
  "include": ["./src/**/*"],
  "exclude": ["./templates/generate/**"]
}
