{
  "name": "@bearer/security",
  "version": "0.85.0",
  "private": false,
  "engines": {
    "node": "<11"
  },
  "description": "Bearer tooling for encrypting and decrypting messages",
  "keywords": [
    "security",
    "bearer"
  ],
  "author": "Bearer Team<engineering@bearer.sh>",
  "homepage": "https://github.com/Bearer/bearer#readme",
  "license": "MIT",
  "main": "lib/index.js",
  "directories": {
    "lib": "lib",
    "test": "__test__"
  },
  "files": [
    "lib/"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Bearer/bearer.git"
  },
  "bugs": {
    "url": "https://github.com/Bearer/bearer/issues"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.2.1",
    "@commitlint/config-conventional": "^7.1.2",
    "@oclif/tslint": "^3.1.1",
    "@types/jest": "^23.3.10",
    "@types/node": "^10.12.17",
    "commitlint": "^7.2.1",
    "cz-conventional-changelog": "^2.1.0",
    "husky": "^1.3.0",
    "jest": "^23.6.0",
    "lint-staged": "^8.1.0",
    "prettier": "^1.15.3",
    "ts-jest": "^23.10.5",
    "tslint": "^5.12.0",
    "tslint-config-prettier": "^1.17.0",
    "typescript": "^3.2.2"
  },
  "lint-staged": {
    "*.{css,md,tsx,ts}": [
      "prettier --write",
      "tslint -c tslint.json --fix",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "scripts": {
    "clean": "rm -rf lib",
    "start": "tsc --watch",
    "build": "tsc -p tsconfig.json",
    "prepare": "yarn build",
    "prepack": "yarn clean && yarn build",
    "test": "jest",
    "test:ci": "jest --coverage"
  }
}
