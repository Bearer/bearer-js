{
  "compilerOptions": {
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "experimentalDecorators": true,
    "module": "commonjs",
    "target": "es6",
    "moduleResolution": "node",
    "outDir": "dist/",
    "declaration": true
  },
  "include": ["src/", "bin/"],
  "exclude": ["node_modules/"]
}
