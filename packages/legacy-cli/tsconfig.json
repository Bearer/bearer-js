{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "experimentalDecorators": true,
    "module": "commonjs",
    "target": "es6",
    "moduleResolution": "node",
    "outDir": "lib/",
    "rootDir": "src/",
    "declaration": true,
    "allowJs": false,
    "lib": ["es2017", "dom"]
  },
  "include": ["src/"],
  "exclude": ["node_modules/", "**/__tests__/**"]
}
