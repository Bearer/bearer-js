{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "experimentalDecorators": true,
    "module": "commonjs",
    "target": "es6",
    "moduleResolution": "node",
    "outDir": "dist/",
    "allowJs": true,
    "lib": ["es2017", "dom"]
  },
  "include": ["src/", "scripts/", "bin/"],
  "exclude": ["node_modules/", "**/__tests__/**"]
}
