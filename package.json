{
  "name": "bearer-js-master",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/@types",
      "**/@types/**"
    ]
  },
  "lint-staged": {
    ".drone.yml": [
      "yarn drone:fmt",
      "yarn drone:lint",
      "cross-env-shell SERVER=$DRONE_SERVER TOKEN=$DRONE_TOKEN \"yarn drone:sign\"",
      "git add"
    ],
    "*.{md}": [
      "prettier --write"
    ],
    "*.{js,css,tsx,ts,json}": [
      "prettier --write --config ./.prettierrc",
      "tslint --fix",
      "git add"
    ]
  },
  "scripts": {
    "clean": "lerna run clean",
    "lerna-publish": "lerna publish --conventional-commits  --registry=https://registry.npmjs.org/",
    "test": "lerna run test:ci --stream",
    "cm": "git-cz",
    "postinstall": "lerna run prepare && lerna link",
    "drone:sign": "cross-env-shell DRONE_TOKEN=$TOKEN DRONE_SERVER=$SERVER \"sh scripts/sign.sh\"",
    "drone:lint": "drone lint",
    "drone:fmt": "drone fmt"
  },
  "license": "MIT",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "devDependencies": {
    "@bearer/tslint-config": ">=0.80.1",
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "cross-env": "^6.0.3",
    "cz-conventional-changelog": "^3.0.2",
    "husky": "^3.0.8",
    "lerna": "^3.16.4",
    "lint-staged": "^9.4.1",
    "per-env": "^1.0.2",
    "prettier": "^1.16.1",
    "tslint": "^5.15.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "version": "0.47.0"
}
