{
  "name": "bearer-master",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "lint-staged": {
    "*.{js,css,md,tsx,ts,json}": [
      "prettier --write",
      "tslint -c tslint.json --fix",
      "git add"
    ]
  },
  "scripts": {
    "clean": "lerna run clean",
    "upgrade-stencil": "(lerna clean --scope=@bearer/ui --scope=@bearer/core --yes) && (lerna exec --scope=@bearer/ui --scope=@bearer/core yarn install) && (lerna exec --scope=@bearer/ui --scope=@bearer/core yarn remove @stencil/core)  && (lerna add --exact @stencil/core --scope=@bearer/ui --scope=@bearer/core ) && lerna bootstrap",
    "lerna-publish": "lerna publish --conventional-commits  --registry=https://registry.npmjs.org/",
    "test": "lerna run test:ci --stream",
    "cm": "git-cz",
    "bootstrap": "lerna bootstrap",
    "postinstall": "lerna run prepare"
  },
  "license": "MIT",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^7.2.1",
    "@commitlint/config-conventional": "^7.1.2",
    "@oclif/tslint": "^3.1.1",
    "cz-conventional-changelog": "^2.1.0",
    "husky": "^1.1.3",
    "lerna": "^3.1.4",
    "lint-staged": "^8.0.4",
    "per-env": "^1.0.2",
    "prettier": "^1.15.2",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "typescript": "^3.1.6"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "version": "0.47.0"
}
