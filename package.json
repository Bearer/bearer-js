{
  "name": "bearer-master",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/@types",
      "**/@types/**"
    ]
  },
  "lint-staged": {
    "*.{md}": [
      "prettier --write"
    ],
    "*.{js,css,tsx,ts,json}": [
      "prettier --write",
      "tslint -c tslint.json --fix",
      "git add"
    ]
  },
  "scripts": {
    "clean": "lerna run clean",
    "upgrade-stencil": "(lerna clean --scope=@bearer/ui --scope=@bearer/core --yes) && (lerna exec --scope=@bearer/ui --scope=@bearer/core yarn install) && (lerna exec --scope=@bearer/ui --scope=@bearer/core yarn remove @stencil/core)  && (lerna add --exact @stencil/core --scope=@bearer/ui --scope=@bearer/core ) && lerna bootstrap",
    "lerna-publish": "lerna publish --conventional-commits  --registry=https://registry.npmjs.org/",
    "test": "lerna run test:ci --stream",
    "cm": "git-cz",
    "bootstrap": "lerna bootstrap",
    "postinstall": "lerna run prepare"
  },
  "license": "MIT",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "devDependencies": {
    "@bearer/tslint-config": ">=0.80.1",
    "@commitlint/cli": "^7.3.2",
    "@commitlint/config-conventional": "^7.3.1",
    "cz-conventional-changelog": "^2.1.0",
    "husky": "^1.3.1",
    "lerna": "^3.10.6",
    "lint-staged": "^8.1.0",
    "per-env": "^1.0.2",
    "prettier": "^1.16.1",
    "tslint": "^5.12.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "version": "0.47.0"
}
