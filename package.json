{
  "name": "bearer-master",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "lint-staged": {
    "*.{js,css,md}": [
      "prettier --write",
      "git add"
    ],
    "*.{tsx,ts}": [
      "tslint -e '**/templates/**' -e '**/__fixtures__/**' -e node_modules --fix",
      "git add"
    ]
  },
  "scripts": {
    "upgrade-stencil": "(lerna clean --scope=@bearer/ui --scope=@bearer/core --yes) && (lerna exec --scope=@bearer/ui --scope=@bearer/core yarn install) && (lerna exec --scope=@bearer/ui --scope=@bearer/core yarn remove @stencil/core)  && (lerna add --exact @stencil/core --scope=@bearer/ui --scope=@bearer/core ) && lerna bootstrap",
    "lerna-publish": "lerna clean --yes && lerna bootstrap && lerna publish",
    "lerna-publish-cicd": "lerna clean --yes && lerna bootstrap && lerna publish --yes --conventional-commits",
    "test": "lerna run test --stream",
    "cm": "git-cz",
    "bootstrap": "lerna bootstrap",
    "prepare": "lerna run prepublish"
  },
  "license": "MIT",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^7.0.0",
    "@commitlint/config-conventional": "^7.0.1",
    "@oclif/tslint": "^1.1.2",
    "babel-core": "^6.26.3",
    "babel-jest": "^23.4.0",
    "babel-loader": "^7.1.5",
    "babel-preset-env": "^1.7.0",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^5.2.0",
    "eslint-config-airbnb-base": "^13.0.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-import": "^2.13.0",
    "husky": "^1.0.0-rc.2",
    "lerna": "^3.1.4",
    "lint-staged": "^7.2.0",
    "per-env": "^1.0.2",
    "prettier": "^1.14.0",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.14.0",
    "typescript": "^3.0.1"
  },
  "transform": {
    "^.+\\.jsx?$": "babel-jest"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "version": "0.47.0"
}
