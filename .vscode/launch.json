  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "name": "CLI - Jest",
      "request": "launch",
      "program": "${workspaceFolder}/packages/cli/node_modules/jest/bin/jest",
      "args": ["--runInBand"],
      "cwd": "${workspaceFolder}/packages/cli",
      "console": "integratedTerminal"
    },
    {
      "type": "node",
      "name": "CLI - Jest unit ",
      "request": "launch",
      "program": "${workspaceFolder}/packages/cli/node_modules/jest/bin/jest",
      "args": ["${fileDirname}/${fileBasename}"],
      "cwd": "${workspaceFolder}/packages/cli",
      "console": "integratedTerminal"
    }
  ]
}
