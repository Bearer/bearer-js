{
  "extends": "@bearer/tslint-config",
  "rules": {
    "object-curly-spacing": [true, "always"],
    "no-console": false
  },
  "linterOptions": {
    "exclude": [
      "**/node_modules/**",
      "**/templates/**",
      "packages/react/dummy/**",
      "**/__fixtures__/**",
      "**/lib/**",
      "**/www/**",
      "package.json",
      "packages/cli/package.json",
      ".github/PULL_REQUEST_TEMPLATE.md"
    ]
  }
}
